{
  "manifest_version": 3,
  "name": "Universal Video & Audio Downloader",
  "version": "1.5",
  "description": "支持多平台的视频和音频下载",

  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "http://127.0.0.1:18888/*"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [{
    "resources": ["download/*"],
    "matches": ["<all_urls>"]
  }]
}
